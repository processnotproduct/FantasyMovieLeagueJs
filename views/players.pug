extends layout

block content
  h1= player.name

  table: thead
    tr
      th Movie
      th # Shares
      th Earned
    each movie in player.earnings
      tr
        td= movie.name
        td(style={'text-align':'right'})= movie.shares
        td(style={'text-align':'right'})= movie.earnedDisp
    if player.bonus1
      tr
        td Bonus: Best Movie
        td
        td(style={'text-align':'right'})= player.bonusAmountDisp
    if player.bonus2
      tr
        td Bonus: Worst Movie
        td
        td(style={'text-align':'right'})= player.bonusAmountDisp
    tr
     td: strong TOTAL
     td
     td: strong= player.totalDisp